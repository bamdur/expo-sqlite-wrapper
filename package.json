{
  "name": "expo-sqlite-wrapper",
  "version": "1.0.0",
  "description": "Simple and lightweight typescript-based Expo SQLite wrapper",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "test": "jest && npm run lint",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "release": "npm semantic-release"
  },
  "keywords": [
    "expo",
    "sqlite",
    "sqlite-wrapper",
    "sqlite-async",
    "react-native",
    "orm",
    "typescript"
  ],
  "author": "Brandon Amdur (https://github.com/bamdur)",
  "license": "MIT",
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "babel-jest": "^26.6.1",
    "jest": "^26.6.1",
    "prettier": "^2.1.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "/__tests__/.*\\.(test|spec)\\.(js|tsx?)$"
  },
  "test-runner": "jest"
}
